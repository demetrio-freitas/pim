# ===========================================
# CONFIGURAÇÕES DE PRODUÇÃO - PIM SYSTEM
# ===========================================
# Copie este arquivo para .env.production e preencha os valores

# Ambiente
ENVIRONMENT=production
LOG_LEVEL=WARN

# ----- DATABASE -----
DATABASE_HOST=your-db-host.db.ondigitalocean.com
DATABASE_PORT=25060
DATABASE_NAME=pim
DATABASE_USER=pim_admin
DATABASE_PASSWORD=your-secure-password-here
DATABASE_SSL=require

# ----- REDIS -----
REDIS_HOST=your-redis-host.db.ondigitalocean.com
REDIS_PORT=25061
REDIS_PASSWORD=your-redis-password

# ----- ELASTICSEARCH (opcional) -----
ELASTICSEARCH_URL=https://your-elasticsearch-host:9200
ELASTICSEARCH_USER=elastic
ELASTICSEARCH_PASSWORD=your-elastic-password

# ----- STORAGE (S3/Spaces) -----
S3_ENDPOINT=https://nyc3.digitaloceanspaces.com
S3_BUCKET=pim-assets-prod
S3_ACCESS_KEY=your-spaces-access-key
S3_SECRET_KEY=your-spaces-secret-key
S3_REGION=nyc3

# ----- JWT -----
# Gerar com: openssl rand -base64 32
JWT_SECRET=your-256-bit-secret-here-base64-encoded
JWT_EXPIRATION=86400000

# ----- KAFKA (opcional) -----
KAFKA_ENABLED=false
KAFKA_BOOTSTRAP_SERVERS=your-kafka-host:9092

# ----- DOMÍNIOS -----
DOMAIN=seudominio.com.br
DOMAIN_FRONTEND=app.seudominio.com.br
DOMAIN_BACKEND=api.seudominio.com.br

# ----- FRONTEND -----
NEXT_PUBLIC_API_URL=https://api.seudominio.com.br

# ----- CONTAINER REGISTRY -----
REGISTRY=registry.digitalocean.com/pim-registry
VERSION=latest
