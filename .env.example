# ===========================================
# PIM System - Environment Variables Template
# ===========================================
# Copy this file to .env and fill in your values
# NEVER commit the .env file to version control
# ===========================================

# ==================== Database ====================
POSTGRES_DB=pim
POSTGRES_USER=pim
# SECURITY: Use a strong, random password (min 32 characters)
POSTGRES_PASSWORD=CHANGE_ME_TO_STRONG_PASSWORD

# ==================== Redis ====================
# SECURITY: Set a strong password for Redis
REDIS_PASSWORD=CHANGE_ME_TO_STRONG_PASSWORD

# ==================== Elasticsearch ====================
# SECURITY: Enable security in production
ELASTICSEARCH_SECURITY_ENABLED=true
ELASTICSEARCH_USERNAME=elastic
ELASTICSEARCH_PASSWORD=CHANGE_ME_TO_STRONG_PASSWORD

# ==================== MinIO ====================
MINIO_ROOT_USER=minioadmin
# SECURITY: Use a strong password (min 16 characters)
MINIO_ROOT_PASSWORD=CHANGE_ME_TO_STRONG_PASSWORD

# ==================== JWT ====================
# SECURITY: Generate a secure random key (256+ bits, Base64 encoded)
# You can generate one with: openssl rand -base64 64
JWT_SECRET=CHANGE_ME_GENERATE_WITH_openssl_rand_-base64_64
# Token expiration in milliseconds (default: 1 hour = 3600000)
JWT_EXPIRATION=3600000

# ==================== Application ====================
SPRING_PROFILES_ACTIVE=prod

# ==================== CORS ====================
# Comma-separated list of allowed origins
CORS_ALLOWED_ORIGINS=https://your-domain.com

# ==================== Rate Limiting ====================
RATE_LIMIT_REQUESTS_PER_MINUTE=60
RATE_LIMIT_LOGIN_ATTEMPTS=5
RATE_LIMIT_LOCKOUT_DURATION_MINUTES=15

# ==================== Media Upload ====================
MEDIA_UPLOAD_PATH=/app/uploads
MEDIA_BASE_URL=https://your-domain.com/uploads
# Maximum file size in bytes (default: 10MB)
MEDIA_MAX_FILE_SIZE=10485760

# ==================== AI Services (Optional) ====================
# OPENAI_API_KEY=sk-...
# ANTHROPIC_API_KEY=sk-ant-...

# ==================== External Services (Optional) ====================
# SHOPIFY_API_KEY=
# SHOPIFY_API_SECRET=
# MERCADOLIVRE_CLIENT_ID=
# MERCADOLIVRE_CLIENT_SECRET=

# ==================== Monitoring ====================
# Set to true to expose metrics endpoints
ACTUATOR_METRICS_ENABLED=false
